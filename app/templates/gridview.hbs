<section id="main_content" class="inner">
  <ul id="widgetgrid">
  	{{#each model}}
		<li {{bindAttr class="category :item"}}>
			{{#linkTo 'extension' this}}
				<img {{bindAttr src="icon_url"}} onerror="this.src='assets/images/default.png';"/>
				<span class="appname">{{name}}</span>
				<span class="appdesc">{{{trimString short_description}}}</span>
			{{/linkTo}}
		</li>  		
  	{{/each}}
  </ul>
</section>